# Python and Django configuration

option_settings:
  aws:elasticbeanstalk:application:environment:
    DJANGO_SETTINGS_MODULE: "plane.settings.production"
    PYTHONPATH: "/var/app/current:$PYTHONPATH"

# Note: WSGIPath is handled by Procfile (gunicorn)
# NumProcesses/NumThreads are set in gunicorn command line args

container_commands:
  01_migrate:
    command: "source /opt/elasticbeanstalk/deployment/custom_env && /var/app/venv/*/bin/python manage.py migrate --noinput"
    leader_only: true

  02_collectstatic:
    command: "source /opt/elasticbeanstalk/deployment/custom_env && /var/app/venv/*/bin/python manage.py collectstatic --noinput"
    leader_only: true
