# Django application configuration

files:
  "/opt/elasticbeanstalk/tasks/taillogs.d/django.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      /var/app/current/logs/django.log
      /var/app/current/logs/gunicorn.log

container_commands:
  01_create_log_dir:
    command: "mkdir -p /var/app/staging/logs && chmod 755 /var/app/staging/logs"

option_settings:
  aws:elasticbeanstalk:application:environment:
    # Logging
    LOG_LEVEL: "INFO"
    DJANGO_LOG_DIR: "/var/app/current/logs"
